<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietSanPhamActivity">

    <EditText
        android:id="@+id/etMaSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã sản phẩm"
        android:layout_margin="16dp"
        android:inputType="none"/>

    <EditText
        android:id="@+id/etMaDanhMuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã danh mục"
        android:layout_margin="16dp"
        android:layout_below="@id/etMaSanPham"
        android:inputType="none"/>

    <EditText
        android:id="@+id/etTenSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:layout_margin="16dp"
        android:layout_below="@id/etMaDanhMuc" />

    <EditText
        android:id="@+id/etGiaSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sản phẩm"
        android:layout_margin="16dp"
        android:layout_below="@id/etTenSanPham" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:layout_below="@id/etGiaSanPham"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:layout_below="@id/etGiaSanPham"
        android:layout_margin="16dp"
        android:layout_toEndOf="@id/btnInsert"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:layout_below="@id/etGiaSanPham"
        android:layout_margin="16dp"
        android:layout_toEndOf="@id/btnUpdate"/>
</RelativeLayout>
