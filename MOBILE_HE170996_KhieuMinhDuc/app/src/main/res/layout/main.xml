<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDanhSachSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DANH SÁCH SẢN PHẨM"
        android:layout_margin="1dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/btnDanhSachSanPhamTheoDanhMuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDanhSachSanPham"
        android:layout_margin="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="DANH SÁCH SẢN PHẨM THEO DANH MỤC" />

    <Button
        android:id="@+id/btnTimKiemSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÌM KIẾM SẢN PHẨM"
        android:layout_margin="1dp"
        android:layout_below="@id/btnDanhSachSanPhamTheoDanhMuc"/>

    <Button
        android:id="@+id/btnLienHe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LIÊN HỆ"
        android:layout_margin="1dp"
        android:layout_below="@id/btnTimKiemSanPham"/>

</RelativeLayout>
